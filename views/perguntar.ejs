<%- include("partials/head.ejs") %> <%- include("partials/header.ejs") %>
<section class="mt-8 mx-auto p-3 container border flex justify-center flex-col gap-4 w-min-[265px] max-w-[700px] bg-white rounded-md shadow-md">
    <h3 class="text-2xl sm:text-4xl text-center">Realizar pergunta</h3>
    <hr class="w-[70%] self-center" />
    <form action="/salvarpergunta" method="post" class="flex gap-3 justify-center flex-col">
        <label
            ><p>Título</p>
            <input
                class="areaTexto"
                placeholder="Título"
                type="text"
                name="titulo" autocomplete="off" />
        </label>
        <label class="w-full">
            <p>Descrição</p>
            <textarea
                name="descricao"
                id=""
                cols="30"
                rows="5"
                class="areaTexto"
                placeholder="Descreva sua pergunta aqui" autocomplete="off"></textarea>
        </label>
        <button type="submit" class="self-start active:scale-90 bg-blue-600 py-1 px-3 rounded-md flex justify-center items-center hover:bg-blue-400 text-slate-50 text-xs sm:text-sm">Perguntar</button>
    </form>
</section>
<%- include("partials/footer.ejs") %>
